# ============================================================================

# Informaci贸n del proyecto
sonar.projectKey=SteveSant26_streamflow_music_backend
sonar.organization=stevesant26
sonar.projectName=StreamFlow Music Backend
sonar.projectVersion=1.0

# ============================================================================
#  CONFIGURACIN DE DIRECTORIOS
# ============================================================================

# Directorios de c贸digo fuente (para an谩lisis de c贸digo)
sonar.sources=src
sonar.sourceEncoding=UTF-8

# Directorios de tests (para m茅tricas de calidad de tests)
sonar.tests=test
sonar.test.inclusions=test/**/*.py
sonar.test.exclusions=test/**/__pycache__/**,test/**/conftest.py

# ============================================================================
#  CONFIGURACIN DE COVERAGE PYTHON
# ============================================================================

# Archivos de coverage XML (CRTICO para mostrar coverage)
# SonarQube buscar谩 estos archivos en orden:
sonar.python.coverage.reportPaths=coverage.xml

# Reportes de tests unitarios XML (para detecci贸n de tests)
